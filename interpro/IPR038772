on RC" "Gould KL."], "ISO_journal" "Genetics", "DOI_URL" nil, "medline_journal" "Genetics", "title" "Coordination between fission yeast glucan formation and growth requires a sphingolipase activity.", "year" 2001, "raw_pages" "1397-411", "volume" "158", "ISBN" nil, "PMID" 11514435}}, :go-terms [{"identifier" "GO:0004767", "name" "sphingomyelin phosphodiesterase activity", "category" {"code" "F", "name" "molecular_function"}}], :entry-id nil, :hierarchy {"accession" "IPR038772", "name" "Sphingomyelinase C/Sphingomyelin phosphodiesterase 2-like", "type" "Family", "children" [{"accession" "IPR017766", "name" "Sphingomyelinase C/phospholipase C", "type" "Family", "children" []}]}, :is-llm false, :entry-annotations {}}}