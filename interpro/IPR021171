ravarthy S" "Gundimella SK" "Caron C" "Perche PY" "Pehrson JR" "Khochbin S" "Luger K."], "ISO_journal" "Mol. Cell. Biol.", "DOI_URL" "http://dx.doi.org/10.1128/MCB.25.17.7616-7624.2005", "medline_journal" "Mol Cell Biol", "title" "Structural characterization of the histone variant macroH2A.", "year" 2005, "raw_pages" "7616-24", "volume" "25", "ISBN" nil, "PMID" 16107708}, "PUB00086219" {"URL" nil, "issue" "13", "authors" ["Chadwick BP" "Valley CM" "Willard HF."], "ISO_journal" "Nucleic Acids Res.", "DOI_URL" "https://doi.org/10.1093/nar/29.13.2699", "medline_journal" "Nucleic Acids Res", "title" "Histone variant macroH2A contains two distinct macrochromatin domains capable of directing macroH2A to the inactive X chromosome.", "year" 2001, "raw_pages" "2699-705", "volume" "29", "ISBN" nil, "PMID" 11433014}}, :go-terms [{"identifier" "GO:0003677", "name" "DNA binding", "category" {"code" "F", "name" "molecular_function"}} {"identifier" "GO:0030527", "name" "structural constituent of chromatin", "category" {"code" "F", "name" "molecular_function"}} {"identifier" "GO:0006334", "name" "nucleosome assembly", "category" {"code" "P", "name" "biological_process"}} {"identifier" "GO:0000786", "name" "nucleosome", "category" {"code" "C", "name" "cellular_component"}}], :entry-id nil, :hierarchy {"accession" "IPR002119", "name" "Histone H2A", "type" "Family", "children" [{"accession" "IPR021171", "name" "Core histone macro-H2A", "type" "Family", "children" []}]}, :is-llm false, :entry-annotations {}}}